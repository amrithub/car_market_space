<style>
.container {
  
  margin-left:200px;
  margin-right:200px;
  border-radius: 5px;
  background-color: #f2f2f2;
  padding: 20px;
}
</style>

<div class="container text-left">
<h1 style="color:blue;font-size:46px;">Car Detail</h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>Date posted:</strong>
  <%= @car.date_posted %>
</p>

<p>
  <strong>Cost :</strong>
  <%= @car.cost %>
</p>
<p>
  <strong>Model:</strong>
  <%= @car.model %>
</p>

<p>
  <strong>Kilometres:</strong>
  <%= @car.kilometres %>
</p>

<p>
  <strong>Last edited:</strong>
  <%= @car.last_edited %>
</p>

<p>
  <strong>Year manufactured:</strong>
  <%= @car.year_manufactured %>
</p>
<p><strong>Body:</strong><%= @car.list.name %></p>
<p>
  <strong>Make:</strong>
  <%= @car.make %>
</p>





<p>
  <strong>Transmission:</strong>
  <%= @car.transmission %>
</p>

<p>
  <strong>Air conditioning:</strong>
  <%= @car.air_conditioning %>
</p>

<p>
  <strong>Colour:</strong>
  <%= @car.colour %>
</p>
<% if user_signed_in?%>
<button data-stripe="payment">
  Pay Deposit <%= number_to_currency(@car.cost) %>
</button>
<%else%>
  <button data-stripe="payment">
 <%= link_to "Buy", new_user_session_path%>
</button>
<%end%>
<script src="https://js.stripe.com/v3/"></script>

<script>
  document
    .querySelector("[data-stripe='payment']")
    .addEventListener("click", () => {
      const stripe = Stripe(
        "<%= Rails.application.credentials.dig(:stripe, :public_key) %>"
      );

      stripe.redirectToCheckout({
        sessionId: "<%= @session_id %>"
      });
    });
</script>
<%= image_tag @car.picture  if @car.picture.attached? %>


<%= link_to 'cars', cars_path %>
<%= link_to 'Edit', edit_car_path(@car) %>
<%= link_to 'Back', cars_path %>
