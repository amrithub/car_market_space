
<h1 style="color:blue;font-size:46px;">Car Lists</h1><style>
table
{
  border-collapse: separate;
  border-spacing: 7px 50px;
}
car.picture
{
  width="50" 
  height="33"
}
</style>

<%= search_form_for @q do |f| %>
  <%= f.search_field :make_or_model_or_colour_or_body_cont %>

  <% List.all.each do |list|%>
    <%= check_box_tag "q[list_name_cont_any][]", list.name%>
    <%= list.name %>
    
<% end %>

  
  <%= f.submit %>

<% end %>
<div class="container color-blue">
<div class="table-hover">   
<table class="table table-striped">
  <thead class="thead-dark">
     <tr>
      <th>Date posted</th>
      <th>Cost</th>
      <th>Model</th>
      <th>Kilometres</th>
      
      <th>Year manufactured</th>
      <th>Make</th>
      <th>Body</th>
      <th>Transmission</th>
      
      <th>Colour</th>
      <th>Picture</th>
      <th colspan="3"></th>
      
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        
        <td><%= car.date_posted %></td>
        
        <td><%= car.cost %></td>
        <td><%= car.model %></td>
        <td><%= car.kilometres %></td>
        
        <td><%= car.year_manufactured %></td>
        <td><%= car.make %></td>
        <td><%= car.list.name %></td>
        
        <td><%= car.transmission %></td>
        
        <td><%= car.colour %></td>
        
        
        <td><%= image_tag car.picture, :style => "border: 1px solid red; width:50px; height:50px;" if car.picture.attached?%></td>
        <td><%= link_to 'Show', car %></td>
        
        <td>
        
        <%= link_to 'Edit', edit_car_path(car) %>
        
        </td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        

        </tr>
    <% end %>
  </tbody>
</table>

